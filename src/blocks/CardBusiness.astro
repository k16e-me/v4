---
import Heading from '../atoms/Heading.astro'
import _shade from '../scripts/shades-from'
import Icon from '../atoms/Icon.astro'

const
    {
        hue, worktag, svg, permalink,
        class: classes, ...props
    } = Astro.props,
    shade = _shade(hue)
---
<section class="p-4 sm:p-8 my-16 sm:my-20 lg:my-24 rounded-3xl shadow-2xl mx-4 relative overflow-hidden text-white" style="background-color: #940e29;">
    <h2 class="sr-only">Take a look at CliquePrize</h2>
    <div class="flex flex-col h-full justify-between min-h-[424px] sm:min-h-[480px] lg:min-h-[576px]">
        <dl class="self-end text-right space-y-4 max-w-md">
            <div class="font-medium">
                <dt class="opacity-70 text-xs uppercase tracking-wider font-bold">Consultant:</dt>
                <dd><p>kb</p></dd>
            </div>
            <div class="font-medium">
                <dt class="opacity-70 text-xs uppercase tracking-wider font-bold">Collaborators:</dt>
                <dd>
                    <p>
                        George Ikem, UI<br />
                        Deborah Edemhanria, Second Eye
                    </p>
                </dd>
            </div>
            <div class="font-medium">
                <dt class="opacity-70 text-xs uppercase tracking-wider font-bold">Technologies:</dt>
                <dd>
                    <p>
                        Storyblok<br />
                        Nuxt + TailwindCSS<br />
                        Github + MS Azure
                    </p>
                </dd>
            </div>
            <div class="font-medium">
                <dt class="opacity-70 text-xs uppercase tracking-wider font-bold">Client:</dt>
                <dd><p>Rob Salerno, Cinnamon Entertainment Group LLC</p></dd>
            </div>
            <div class="font-medium">
                <dt class="opacity-70 text-xs uppercase tracking-wider font-bold">Locale:</dt>
                <dd><p>Nashville, Tennessee, USA</p></dd>
            </div>
        </dl>
        <div class="absolute inset-x-0 top-1/2 -translate-y-1/2"><img src="https://a.storyblok.com/f/98430/x/3f7d169db9/logo-white.svg" alt="" class="w-full opacity-10" /></div>
        <div class="flex items-center pt-4">
            <span class="text-xl sm:text-2xl md:text-3xl font-bold sm:font-extrabold">Take a look at CliquePrize</span>
            <Icon name="logo" class:list="w-full"/>
        </div>
    </div>
</section>