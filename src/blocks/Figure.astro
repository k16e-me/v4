---
import { Image } from 'astro:assets'

const
    {
        image, alt, caption, orientation = 'profile',
        class: classes, ...props
    } = Astro.props
---
<figure class:list={[
    '',
    orientation == 'profile' && 'size-full',
    classes
]} { ...props }>
    <Image
        src={ image }
        alt={ alt }
        class:list={[
            'size-full',
            orientation == 'profile' && 'object-cover object-top h-[456px] md:max-h-[480px]'
        ]}
    />
    <figcaption
        set:text={ caption }
        class="bg-accent-500 p-3 text-sm italic"
    />
</figure>