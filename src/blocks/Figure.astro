---
import Image from '../atoms/Image.astro'

const
    {
        image, alt, caption, orientation = 'profile',
        class: classes, ...props
    } = Astro.props
---
<figure class:list={[
    classes
]} { ...props }>
    <Image
        filename={ image }
        alt={ alt }
        contrast
    />
    <figcaption
        set:text={ caption }
        class="bg-accent-500 p-3 text-sm italic"
    />
</figure>