---
import { Image } from 'astro:assets'

const
    {
        image, alt, caption, orientation = 'profile',
        class: classes, ...props
    } = Astro.props
---
<figure class:list={[
    classes
]} { ...props }>
    <Image
        src={ image }
        alt={ alt }
        class:list={[
            'size-full',
            orientation == 'profile' && 'object-cover object-top h-[480px] xs:h-[520px] sm:h-80 md:h-[400px] lg:h-[480px]'
        ]}
    />
    <figcaption
        set:text={ caption }
        class="bg-accent-500 p-3 text-sm italic"
    />
</figure>