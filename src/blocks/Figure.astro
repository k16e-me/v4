---
import Image from '@atoms/Image.astro'

const {
	image,
	alt,
	caption,
	orientation,
	contrast = true,
	contain,
	oleft,
	class: classes,
	...props
} = Astro.props
---

<figure class:list={[classes]} {...props}>
	<Image
		filename={image}
		alt={alt}
		orientation={orientation}
		contrast={contrast}
		heighten={false}
		contain={contain}
		objectLeft={oleft}
	/>
	{
		caption && (
			<figcaption
				set:text={caption}
			/>
		)
	}
</figure>
