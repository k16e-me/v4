---
const
    {
        component = null,
        padding = 'both',
        title,
        class: classes,
        ...attrs
    } = Astro.props
---
<section
    class:list={[
        `_section _section-${ component } relative`,
        padding === 'both' && 'py-14 sm:py-16 lg:py-20',
        padding === 'bottom' && 'pb-14 sm:pb-16 lg:pb-20',
        classes
    ]} { ...attrs }>
    { title && <h2 set:text={ title } class="sr-only"/> }
    <slot/>
</section>