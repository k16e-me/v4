---
const
    {
        component = null,
        padding = 'both',
        title,
        tag = 'section',
        class: classes,
        ...attrs
    } = Astro.props,
    Tag = tag
---
<Tag
    class:list={[
        `_section _section-${ component }`,
        padding === 'both' && 'py-16 sm:py-20 lg:py-[5.55rem]',
        padding === 'bottom' && 'pb-16 sm:pb-20 lg:pb-[5.55rem]',
        classes
    ]} { ...attrs }>
    { title && <h2 set:text={ title } class="sr-only"/> }
    <slot/>
</Tag>