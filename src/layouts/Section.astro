---
import { _py, _pb } from '@scripts/snips'
const
    {
        component = null,
        padding = 'bottom',
        title,
        tag = 'section',
        class: classes,
        ...attrs
    } = Astro.props,
    Tag = tag
---
<Tag
    class:list={[
        `_section _section-${ component }`,
        padding === 'both' && _py(),
        padding === 'bottom' && _pb(),
        classes
    ]} { ...attrs }>
    { title && <h2 set:text={ title } class="sr-only"/> }
    <slot/>
</Tag>