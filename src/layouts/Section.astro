---
import { _py, _pb, _pt } from '@scripts/snips'
const
    {
        component = null,
        padding = 'bottom',
        prose = false,
        title,
        tag = 'section',
        class: classes,
        ...attrs
    } = Astro.props,
    Tag = tag
---

<Tag
	class:list={[
		`_section _section-${component}`,
		padding == 'both' && _py(),
		padding == 'top' && _pt(),
		padding == 'bottom' && _pb(),
		padding == 'none' && '',
        prose && 'my-5',
		classes,
	]}
	{...attrs}>
	{title && <h2 set:text={title} class='sr-only' />}
	<slot />
</Tag>