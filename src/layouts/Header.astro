---
import Wrapper from './Wrapper.astro'
import Icon from '@atoms/Icon.astro'
import nav from '@content/settings/nav.json'
import _slugify from '@scripts/slugify'
import AnchorNav from '@atoms/AnchorNav.astro'

const
    {
        title,
        class: classes, ...attrs
    } = Astro.props
---
<header
    class:list={[
        'z-50 fixed bottom-0 inset-x-0',
        classes
    ]}
    data-header-main
    { ...attrs }>
    <Wrapper tag="nav" padX={ false }>
        <ul class="flex justify-between xs:justify-start [&>*]:w-full [&>*]:xs:w-auto col-span-full">
            <li>
                <AnchorNav
                    href="/"
                    data="/"
                    text="K16E, Inc."
                    showIcon
                    showText={ false }
                    icon="logo"
                />
            </li>
            { nav.map(it => (
                <li>
                    <AnchorNav
                        href={ `/${it.slug }`}
                        text={ it.title }
                        data={ _slugify(it.slug) }
                    />
                </li>
            )) }
        </ul>
    </Wrapper>
</header>