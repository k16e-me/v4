---
import {
    _padB, _padY, _padT
} from '../scripts/snips'

const
    {
        padX = true,
        tag = 'div',
        class: classes, ...props
    } = Astro.props,
    Tag = tag
---
<Tag
    { ...props }
    class:list={[
        'grid grid-cols-12',
        padX && 'px-4 md:px-0',
        classes
    ]}>
    <slot/>
</Tag>