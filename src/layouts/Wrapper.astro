---
import {
    _padB, _padY, _padT
} from '../scripts/snips'

const
    {
        centered = true,
        padX = true,
        tag = 'div',
        containXlUp,
        releaseXlUp,
        class: classes,
        ...props
    } = Astro.props,
    Tag = tag
---
<Tag
    { ...props }
    class:list={[
        centered && 'mx-auto',
        padX && 'px-4',
        classes
    ]}>
    <slot/>
</Tag>