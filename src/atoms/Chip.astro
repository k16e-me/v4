---
import Icon from '@atoms/Icon.astro'

const {
	text = 'New',
	base = true,
	theme = 'default',
	icon,
	class: classes,
	...props
} = Astro.props
---

<span
	class:list={[
		'flex items-center justify-center font-semibold uppercase text-xs py-1.5 px-3.5 rounded-full max-w-28 tracking-wide',
		theme === 'default' &&
			theme !== 'neutral' &&
			'bg-[var(--r-accent)] text-[var(--r-accent-contrast-text)]',
		theme === 'neutral' && 'bg-slate-500/25 dark:text-slate-400 text-slate-600',
		theme === 'positive' && 'bg-blue-500/25 dark:text-blue-400 text-blue-600',
		theme === 'success' && 'bg-green-500/25 dark:text-green-400 text-green-600',
		classes,
	]}
	{...props}>
	{icon && <Icon name={icon} class:list='w-5' />}
	<span set:text={text} />
</span>
