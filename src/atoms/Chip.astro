---
import Icon from '@atoms/Icon.astro'

const { text = 'New', icon, class: classes, ...props } = Astro.props
---

<span
	class:list={[
		'flex items-center justify-center font-semibold uppercase text-xs py-2 px-3.5 bg-[var(--r-accent)] text-[var(--r-accent-contrast-text)] rounded-full max-w-28 tracking-wide',
		classes,
	]}
	{...props}>
	{icon && <Icon name={icon} class:list='w-5' />}
	<span set:text={text} />
</span>
