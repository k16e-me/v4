---
import Icon from '@atoms/Icon.astro'

const {
	text = 'New',
	base = true,
	neutral,
	icon,
	class: classes,
	...props
} = Astro.props
---

<span
	class:list={[
		'flex items-center justify-center font-semibold uppercase text-xs py-1.5 px-3.5 text-[var(--r-accent-contrast-text)] rounded-full max-w-28 tracking-wide',
		base && !neutral && 'bg-[var(--r-accent)]',
		neutral && 'bg-slate-200/70',
		classes,
	]}
	{...props}>
	{icon && <Icon name={icon} class:list='w-5' />}
	<span set:text={text} />
</span>
