---
import Icon from '@atoms/Icon.astro'

const { text = 'New', icon, class: classes, ...props } = Astro.props
---

<span
	class:list={[
		'flex items-center font-semibold uppercase tracking-wider text-xs py-1.5 px-3 bg-accent-500 text-primary-950/90 rounded-full',
		classes,
	]}
	{...props}>
	{icon && <Icon name={icon} class:list='w-5' />}
	<span set:text={text} />
</span>
