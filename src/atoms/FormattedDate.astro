---
const
    {
        date,
        class: classes, ...props
    } = Astro.props
---
<time
    datetime={ date.toISOString() }
    class:list={[
        'text-sm',
        classes
    ]} { ...props }>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>