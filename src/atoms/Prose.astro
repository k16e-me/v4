---
const { class: classes, ...props } = Astro.props
---

<div
	class:list={[
		`
            max-w-none
            prose prose-lg xl:prose-xl
            prose-h4:italic prose-h4:font-bold prose-h4:[font-size:112%]
            prose-p:text-white/80 prose-p:leading-[1.655]
            prose-a:text-accent-500 hover:prose-a:text-white prose-a:transition prose-a:duration-300 prose-a:ease-linear
            prose-headings:text-white prose-strong:text-white
            prose-blockquote:border-accent-500 prose-blockquote:bg-gradient-to-r prose-blockquote:from-accent-500/5 prose-blockquote:to-transparent prose-blockquote:py-1 before:prose-p:content-none after:prose-p:content-none
            prose-ol:text-white/80 marker:text-accent-500 prose-ol:leading-normal
            prose-figcaption:m-0 prose-figcaption:bg-accent-500 prose-figcaption:text-primary-950/90 prose-figcaption:p-3 prose-figcaption:text-sm prose-figcaption:italic
        `,
		classes,
	]}
	{...props}>
	<slot />
</div>
