---
import { _transition } from '@scripts/snips'
import Icon from '@atoms/Icon.astro'

const { icon, text, base, fabToPill, class: classes, ...props } = Astro.props
---

<button
	class:list={[
		'inline-flex items-center justify-center',
		_transition(),
		base &&
			'text-[var(--r-accent-contrast-text)] bg-[var(--r-accent)] rounded-full shadow-2xl',
		fabToPill && 'size-16 sm:!h-14 sm:!w-full sm:px-5',
		classes,
	]}
	{...props}>
	<Icon name={icon} class:list='w-7 sm:w-6' />
	<span
		set:text={text}
		class:list={[
			'font-medium text-lg !ml-2',
			fabToPill && 'sr-only sm:not-sr-only',
		]}
	/>
</button>
