---
import { _transition } from '@scripts/utils/snips'
import Icon from '@atoms/Icon.astro'

const {
	icon,
	text,
	base,
	fabToPill,
	plain,
	class: classes,
	...props
} = Astro.props
---

<button
	class:list={[
		'inline-flex items-center justify-center r-transition',
		_transition(),
		base &&
			'bg-(--color-accent) hover:bg-[var(--color-accent-hover)] text-(--color-primary-reverse) rounded-full shadow-2xl',
		fabToPill && 'size-16 sm:!h-14 sm:!w-full sm:px-5',
		plain &&
			'text-(--color-accent) hover:text-[var(--color-accent-hover)] p-4',
		classes,
	]}
	{...props}>
	<Icon name={icon} class='w-7 sm:w-6' />
	<span
		set:text={text}
		class:list={[
			'font-medium text-lg !ml-2',
			fabToPill && 'sr-only sm:not-sr-only',
		]}
	/>
</button>
