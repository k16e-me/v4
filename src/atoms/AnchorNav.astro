---
import { _transition } from '@scripts/snips'
import Anchor from '@atoms/Anchor.astro'
import Icon from '@atoms/Icon.astro'

const {
    href, data, showIcon, icon, showText = true, text
} = Astro.props
---
<Anchor
    href={ href }
    class:list={[
        `px-4 py-3 flex justify-center h-full
        border-b-[3px] border-transparent [&.active]:border-accent-500
        text-white opacity-70 hover:opacity-100 [&.active]:opacity-100
        text-lg font-medium lowercase`,
        _transition()
    ]}
    data-anchor={ data }>
    { showIcon && (<Icon name={ icon } class:list="h-5 text-white"/>) }
    <span set:text={ text } class:list={ showText ? 'translate-y-1' : 'sr-only' }/>
</Anchor>