---
import { marked } from '@scripts/lib/marked-setup'

const {
	copy,
	size = 'default',
	color = 'light',
	tag,
	dim,
	dimmer,
	dimmest,
	class: classes,
	...props
} = Astro.props
const Tag = tag || 'div'
---

<Tag
	set:html={marked.parse(copy)}
	class:list={[
		color == 'light' && 'text-zinc-700 dark:text-zinc-300',
		color == 'dark' && 'text-zinc-950 dark:text-zinc-50',
		color == 'accent' && 'text-amber-700 dark:text-amber-400',
		color == 'neutral' && 'text-black dark:text-white',
		color === 'on-pastel' && 'text-zinc-900',
		size === 'sm' && 'text-sm',
		size === 'base' && 'text-base !leading-[1.45rem]',
		size === 'md' && 'text-md lg:text-lg',
		dim && 'opacity-90',
		dimmer && 'opacity-70',
		dimmest && 'opacity-40',
		classes,
	]}
	{...props}
/>
