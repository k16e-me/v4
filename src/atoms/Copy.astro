---
const {
    copy, size = 'default', color = 'light', tag = 'p',
    class: classes, ...props
} = Astro.props,
Tag = tag
---
<Tag
    set:text={ copy }
    class:list={[
        color == 'light' && 'text-white/70',
        color == 'dark' && 'text-primary-950/70',
        color == 'accent' && 'text-accent-500',
        size == 'sm' && 'text-sm',
        classes,
    ]} { ...props }
/>