---
import { marked } from '@scripts/lib/marked-setup'

const {
	copy,
	size = 'default',
	color = 'light',
	tag,
	dim,
	dimmer,
	dimmest,
	class: classes,
	...props
} = Astro.props
const Tag = tag || 'div'
---

<Tag
	set:html={marked.parse(copy)}
	class:list={[
		color == 'light' && 'r-surface-copy',
		color == 'dark' && 'r-surface-strong',
		color == 'accent' && 'r-surface-accent',
		color == 'neutral' && 'text-black dark:text-white',
		color === 'on-pastel' && 'text-zinc-900',
		size === 'sm' && 'text-sm',
		size === 'base' && 'text-base !leading-[1.45rem]',
		size === 'md' && 'text-md lg:text-lg',
		dim && 'opacity-90',
		dimmer && 'opacity-70',
		dimmest && 'opacity-40',
		classes,
	]}
	{...props}
/>
