---
const {
    copy,
    size = 'default',
    color = 'light',
    tag = 'p',
    class: classes,
    ...props
} = Astro.props
const Tag = tag
---

<Tag
	set:text={copy}
	class:list={[
		color == 'light' && 'text-[var(--r-contrast-text)]',
		color == 'dark' && 'text-[var(--r-primary)]',
		color == 'accent' && 'text-[var(--r-accent)]',
		color === 'on-pastel' && 'text-[var(--r-color-base)]',
		size === 'sm' && 'text-sm',
		size === 'md' && 'text-base sm:text-md lg:text-lg',
		classes,
	]}
	{...props}
/>
