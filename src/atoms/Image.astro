---
import { Image } from 'astro:assets'

const {
	filename,
	alt,
	orientation,
	contrast = true,
	typical,
	noholdsbarred,
	objectLeft = true,
	heighten = true,
    contain,
    avatar,
    fw = true,
	class: classes,
	...props
} = Astro.props
---

<Image
	src={filename}
	alt={alt}
	class:list={[
		fw && !avatar && 'w-full',
        contain ? 'object-contain' : 'object-cover',
		heighten && !avatar && 'h-full',
		objectLeft && !avatar && 'object-left-top',
		contrast && 'r-contrast',
		orientation == 'profile' &&
			'h-[480px] xs:h-[520px] sm:h-80 md:h-[400px] lg:h-[480px]',
		orientation == 'landscape' && 'max-h-[640px]',
		typical && 'md:max-h-[640px]',
		noholdsbarred && 'max-h-[900px]',
        avatar && 'size-11 rounded-full'
	]}
	draggable='false'
	quality='max'
	{...props}
/>
