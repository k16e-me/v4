---
import { Image } from 'astro:assets'
import { _contrast } from '../scripts/snips'

const {
    filename, alt, orientation = 'profile', contrast, typical,
    class: classes, ...props
} = Astro.props
---
<Image
    src={ filename }
    alt={ alt }
    class:list={[
        'size-full object-cover object-top',
        contrast && _contrast(),
        (orientation == 'profile' && !typical) && 'h-[480px] xs:h-[520px] sm:h-80 md:h-[400px] lg:h-[480px]',
        orientation == 'landscape' && 'h-full max-h-[640px]',
        typical && 'md:max-h-[640px]'

    ]}
    draggable="false"
    quality="max"
    { ...props }
/>