---
import { getCollection } from 'astro:content'
import Base from '../layouts/Base.astro'

export async function getStaticPaths() {
    const
        pages = await getCollection('pages'),
        work = await getCollection('work'),
        astro = await getCollection('astro'),
        collections = [...pages, ...work, ...astro],
        slug = (entry) => {
            if (entry.collection === 'pages') return entry.slug === 'home' ? undefined : entry.slug
            else return `${entry.collection}/${entry.slug}`
        }

    return collections.map(entry => ({
        params: { slug: slug(entry) },
        props: { entry },
    }))
}

const
    { entry } = Astro.props,
    { Content } = await entry.render()
---
<Base frontmatter={ entry }>
    <Content/>
</Base>