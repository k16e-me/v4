---
import Section from '../layouts/Section.astro'
import Wrapper from '../layouts/Wrapper.astro'
import Word from '../blocks/Word.astro'
import Icon from '../atoms/Icon.astro'

const {
    title, words = ['Business', 'Services', 'Space'], padding,
    class: classes, ...props
} = Astro.props
---
<Section
    component="words"
    title={ title }
    padding={ padding }>
    <Wrapper>
        <div
            class:list={[
                'col-span-full xs:col-start-2 xs:col-end-12 place-self-center place-content-center grid grid-cols-12 grid-rows-1 items-center text-center relative overflow-clip'
            ]}>
            { words.map((w, idx) => (
                <Word
                    text={ w }
                    class:list="[grid-area:1/1/-1/-1] py-3 invisible"
                    data-word
                />
            )) }
            <!-- <button
                data-pause
                aria-label="Animation play/pause button"
                class="text-white group/ctrl transition duration-200 text-center">
                <Icon name="stop-circle" class:list="w-8 opacity-70 group-hover/ctrl:opacity-100 transition duration-200"/>
            </button> -->
        </div>
    </Wrapper>
</Section>