---
import Section from '@layouts/Section.astro'
import Wrapper from '@layouts/Wrapper.astro'
import Tile from '@blocks/Tile.astro'
import _random from '@scripts/random'

const
    {
        title,
        padding = 'bottom',
        blockColor,
        tiles,
        class: classes, ...props
    } = Astro.props,
    pastels = [
        '#fae8ff', '#ecfccb', '#fef3c7', '#fee2e2', '#f5f5f4', '#f1f5f9', '#e0f2fe', '#fef9c3', '#ffe4e6', '#ffedd5', '#fce7f3', '#f3e8ff', '#ede9fe',
    ]
---
<Section
    component="tiles"
    title={ title }
    padding={ padding }
    class:list="invisible"
    data-entry="below">
    <Wrapper x={ false }>
        <div
            class:list={[
                `
                    col-span-full lg:col-start-2 lg:col-end-12 grid grid-cols-12 gap-4
                    [&>:nth-child(5n+1)]:col-span-6 [&>:nth-child(5n+1)]:lg:col-span-5
                    [&>:nth-child(5n+5)]:col-span-6 [&>:nth-child(5n+5)]:lg:col-span-5
                    [&>:nth-child(5n+2)]:col-span-6 [&>:nth-child(5n+2)]:lg:col-span-7
                    [&>:nth-child(5n+4)]:col-span-6 [&>:nth-child(5n+4)]:lg:col-span-7
                    [&>:nth-child(5n+3)]:col-span-12
                `
            ]}>
            { tiles.map((e, idx) => (
                <Tile
                    obj={ e }
                    pastel={ pastels[_random(0, pastels.length)] }
                />
            )) }
        </div>
    </Wrapper>
</Section>